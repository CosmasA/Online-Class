<script>
function updateView(x) {
  let offcanvas = document.querySelector(".offcanvas");

  if (x.matches) {
    offcanvas.classList.remove("show");
  } else {
    offcanvas.classList.add("show");
  }
}

let x = window.matchMedia("(max-width: 720px)");

updateView(x);

x.addEventListener("change", function () {
  updateView(x);
});
</script>
